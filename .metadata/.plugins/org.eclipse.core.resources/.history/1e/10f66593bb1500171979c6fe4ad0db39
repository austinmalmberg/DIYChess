import java.util.Scanner;


public class Calculator {
	public static Scanner sc;
	
	public static void main(String[] args) {
		sc = new Scanner(System.in);
		
		String numRegex = "[0-9]";
		String modRegex = "[+|-|x|/]";
		
		int first = Integer.parseInt(get("Enter a number: ", numRegex));
		int second = Integer.parseInt(get("Enter another number: ", numRegex));
		char mod = get("Enter a modifier " + modRegex + ": ", modRegex).charAt(0);
		
		System.out.println(first+second);
	}
	
	public static String get(String prompt, String regex) {
		String s = null;
		do {
			System.out.print(prompt);
			s = sc.nextLine();
			
			if(s.matches(regex)) return s;
			else System.out.println(s + " is not valid.");
		} while(true);
	}
}
